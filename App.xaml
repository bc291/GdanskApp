<Application x:Class="tristarweather.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:tristarweather"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="ButtonLight" TargetType="{x:Type Path}">
            <Setter Property="Fill" Value="#FF263241"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Fill" Value="#FF0068FF" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ButtonDark" TargetType="{x:Type Path}">
            <Setter Property="Fill" Value="DarkGoldenrod"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Fill" Value="SandyBrown" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <SolidColorBrush x:Key="pageBackground" Color="White"/>

        <SolidColorBrush x:Key="listviewBackground" Color="White"/>
        <SolidColorBrush x:Key="themeDarkFontColor" Color="Black"/>
        <SolidColorBrush x:Key="contrastColor" Color="White"/>

    </Application.Resources>
</Application>
